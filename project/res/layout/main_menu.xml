<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/labelStatusMsg"
        android:layout_alignTop="@+id/toggleButton1"
        android:progress="100" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="18dp"
        android:minWidth="80dp"
        android:onClick="toggle1"
        android:text="ToggleButton"
        android:textOff="Play"
        android:textOn="Pause" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleButton1"
        android:layout_alignLeft="@+id/toggleButton1"
        android:layout_alignRight="@+id/toggleButton1"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignRight="@+id/ButtonDisconnect"
        android:layout_toRightOf="@+id/ButtonConnect"
        android:onClick="goToGraph"
        android:text="Respiration Signal Graph" />

    <Button
        android:id="@+id/ButtonDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ButtonConnect"
        android:layout_alignBottom="@+id/ButtonConnect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:minWidth="100dp"
        android:text="Disconnect" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="                  Music Selection"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:entries="@array/track_array" />

    <Button
        android:id="@+id/ButtonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="21dp"
        android:minWidth="100dp"
        android:text="Connect" />

    <TextView
        android:id="@+id/RespirationRate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ButtonDisconnect"
        android:layout_marginTop="15dp"
        android:text="Respiration Rate"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/labelRespRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelStatusMsg"
        android:layout_alignRight="@+id/ButtonDisconnect"
        android:layout_below="@+id/RespirationRate"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="000" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/StatusTextBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Status Message"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/labelStatusMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/StatusTextBox"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Respiration Signal Graph" />

</RelativeLayout>